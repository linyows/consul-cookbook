consul {
  address = "127.0.0.1:8500"
  ssl {
    enabled = false
  }
  retry {
    enabled = true
    attempts = 5
    backoff = "500ms"
  }
}

max_stale = "10m"
log_level = "warn"
pid_file = "/var/run/consul-template/pid"

syslog {
  enabled = true
  facility = "LOCAL5"
}

template {
  source = "/etc/consul-template/h2o.upstream.conf.ctmpl"
  destination = "/tmp/h2o.upstream.conf"
  command = "systemctl reload h2o.service"
}
